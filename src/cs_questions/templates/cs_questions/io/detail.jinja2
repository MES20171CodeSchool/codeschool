{% extends "cs_questions/detail.jinja2" %}

{% block content_head %}
    {{ super() }}

    <div class="rules-box">
        <h3>{{ _('Rules') }}</h3>
        <dl>
            <dt>{{ _('Maximum runtime') }}</dt>
            <dd>{{ gettext('%(time)s seconds', time=question.timeout) }}</dd>
        </dl>
    </div>
{% endblock %}

{% block response_form %}
    <div class="code-area">
        <h2>{{ _('Response') }}</h2>
        {% if not lang %}
            <div>
                <p>Programming language: {{ form['language'] }}</p>
            </div>
        {% else %}
            <input type="hidden" name="{{ form['language'].name }}" value="{{ form['language'].value }}">
        {% endif %}
        <ace-editor mode="python" read-only>print('hello world')</ace-editor>
    </div>
{% endblock %}

{% block style %}
    {{ super() }}

    <link rel="stylesheet" type="text/css" href="{% static 'bower_components/codemirror/lib/codemirror.css' %}">
    <style>
        .iospec-testcase {
            padding-left: 30px;
        }
        .iospec-testcase h4 {
            margin-left: -20px;
        }
        .iospec-input {
            color: darkred;
        }
    </style>
{% endblock %}

