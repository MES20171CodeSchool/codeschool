{% extends "base.jinja2" %}

{% block style %}
    <style is="custom-style">
        body {
            min-height: 100vh;
            display: flex;
            flex-flow: column;
            justify-content: space-between;
        }

        body > * {
            padding: 30px 15%;
        }

        header, footer {
            background: #666 url('{% static 'img/bg_gray_noise.png' %}') repeat;
            color: #eee;

        }

        header {
            flex-grow: 1;
            padding-bottom: 0px;
            display: flex;
            flex-flow: column;
            align-content: flex-end;
        }

        header h1 {
            margin-top: auto;
            font-size: 3em;
        }

        main {
            margin: 30px 15%;
            padding: 0px;
        }

        main iron-pages {
            margin: 10px 10%;
        }

        footer {
            text-align: right;
            flex-grow: 1;
        }

        button,
        paper-button {
            padding: 10px 15px;
            font-size: 1.1em;
        }
    </style>
{% endblock %}


{% block body %}
    <template is="dom-bind">
        <header>
            {% block header %}
                <h1>{% block content_title %}Bem vindo ao Codeschool!{% endblock %}</h1>
            {% endblock %}
        </header>
        <main>
            {% block content %}{% endblock %}
        </main>

        <footer>
            {% block footer %}
                <paper-button raised onclick="submit()">Avan√ßar</paper-button>
                <script>
                    $(function (){
                        var tabs = $('#tabs')[0];
                        if (tabs) {
                            tabs.selected = 0;
                        }
                    });
                </script>
            {% endblock %}
        </footer>
    </template>
{% endblock %}

{% block script %}{% endblock %}
