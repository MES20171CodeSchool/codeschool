{% extends "base.jinja2" %}
{% block title %}
    Battle winners
{% endblock %}
{% block content %} 
<h1>Resultado da Batalha</h1>
<table id="battles">
    <thead><tr><th>ID</th><th>Data</th><th>Result Battle</th></tr></thead>
    <tbody>
        {% for battle in battles %}
        <tr>
            <td> {{ battle.id }} </td>
            <td> {{ battle.time_begin|dateformat(format="short") }} ~ {{ battle.time_end|dateformat(format="short") }} </td>
            <td> <a href="{{battle.battle_result_id}}"> {{ battle.battle_result }} </a></td>

        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
