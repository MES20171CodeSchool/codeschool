{% extends "base.jinja2" %}
{% block content %}

<form action="invitation" method="POST">
    {% csrf_token %}
    <label>Usuários</label><input type="text" placehold="usuários"name="usernames"></input><br>
    <label>Questão</label>
    <select name="questions">
        {% for question in questions %}
            <option value="{{ question.id }}"> {{ question.short_description }} </option>
        {% endfor %}
    </select> 
    <br> 
    <label>Linguagem</label>
    <select name="languages">
        {% for language in languages %}
            <option value="{{ language.pk }}"> {{ language.name }} </option>
        {% endfor %}
    </select><br>
    <input type="radio" value="lenght"name="type">Tamanho do código</input><br>
    <input type='submit' value="submit"></input><br>
</form>
{% endblock %}
