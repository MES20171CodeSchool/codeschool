{% extends 'viewpack/crud/detail-base.jinja2' %}

{% block content_head %}
    {{ super() }}
    <div class="detail-box">
        {{ self.object_detail() }}
    </div>
{% endblock %}

{% block object_description %}
    <h2>{{ _('Description') }}</h2>
    <div>{{ object.long_description|markdown }}</div>
{% endblock %}

{% block content_body %}
    {{ self.object_description() }}
{% endblock %}