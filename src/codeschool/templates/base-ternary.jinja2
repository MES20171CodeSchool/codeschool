{% extends "base.jinja2" %}

{% block body_class %}ternary {{ super() }}{% endblock %}

{% block body %}
    <header class="dark">
        {% block header %}
            <h1>{% block content_title %}{% endblock %}</h1>
        {% endblock %}
    </header>

    <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
        <div class="mdl-tabs__tab-bar dark">
            {% for (tab, title) in tabs %}
                <a href="#{{ tab }}" class="mdl-tabs__tab{% if loop.index == 1 %} is-active{% endif %}">{{ title }}</a>
            {% endfor %}
        </div>

        <main>
            {% block main %}{% endblock %}
        </main>
    </div>

    <footer class="dark">
        {% block footer %}
            <button class="primary" onclick="submit()">{{ _('Next') }}</button>
        {% endblock %}
    </footer>
{% endblock %}
